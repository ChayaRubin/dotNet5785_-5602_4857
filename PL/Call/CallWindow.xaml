<Window x:Class="PL.Call.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:bo="clr-namespace:BO;assembly=BL"
        Title="Call Details" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Rounded Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding WindowTitle}" FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>

        <StackPanel Grid.Row="1" Margin="0 10 0 10">
            <Label Content="Type:"/>
            <ComboBox ItemsSource="{Binding CallTypes}" SelectedItem="{Binding CurrentCall.Type}" />

            <Label Content="Description:"/>
            <TextBox Text="{Binding CurrentCall.Description}" />

            <Label Content="Address:"/>
            <TextBox Text="{Binding CurrentCall.Address}" />

            <Label Content="Open Time:"/>
            <TextBox Text="{Binding CurrentCall.OpenTime, StringFormat='yyyy-MM-dd HH:mm'}" />

            <Label Content="Max End Time:"/>
            <TextBox Text="{Binding CurrentCall.MaxEndTime, StringFormat='yyyy-MM-dd HH:mm'}" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save" Click="BtnSave_Click" 
                    Background="#B9D15F" Width="100" Height="35" FontSize="14" 
                    Style="{StaticResource RoundedButtonStyle}"/>

            <Button Content="Cancel" Click="BtnCancel_Click" 
                    Background="#F9B350" Width="100" Height="35" FontSize="14" 
                    Style="{StaticResource RoundedButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
