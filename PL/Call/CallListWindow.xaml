<Window
    x:Class="PL.Call.CallsListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:BO="clr-namespace:BO;assembly=BL"
    Title="Call List"
    Height="500"
    Width="850"
    Background="#E6F0FA"
    Loaded="Window_Loaded"
    Closing="Window_Closing"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="ColoredComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#C25C9E"/>
            <Setter Property="BorderBrush" Value="#C25C9E"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid>
            <Border Background="White" CornerRadius="12" Padding="20" BorderBrush="#0F425F" BorderThickness="2" Margin="40">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <!-- Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 20" HorizontalAlignment="Left">
                        <TextBlock Text="Filter by Call Type:" VerticalAlignment="Center" Margin="0 10 10 0"
                                   Foreground="#C25C9E" FontWeight="Bold"/>
                        <ComboBox
                            ItemsSource="{Binding CallTypes}"
                            SelectedItem="{Binding SelectedCallType, Mode=TwoWay}"
                            Width="200"
                            Style="{StaticResource ColoredComboBox}"/>
                    </StackPanel>

                    <!-- Call List -->
                    <ListView
                        ItemsSource="{Binding CallsListView}"
                        SelectedItem="{Binding SelectedCall, Mode=TwoWay}"
                        Height="300"
                        BorderBrush="#B0C4DE"
                        BorderThickness="1"
                        MouseDoubleClick="CallsListView_MouseDoubleClick">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" Width="100"/>
                                <GridViewColumn Header="Status" DisplayMemberBinding="{Binding StatusText}" Width="100"/>
                                <GridViewColumn Header="Time Left" DisplayMemberBinding="{Binding RemainingTime}" Width="100"/>
                                <GridViewColumn Header="Treatment Time" DisplayMemberBinding="{Binding TotalTreatmentTime}" Width="120"/>
                                <GridViewColumn Header="Last Volunteer" DisplayMemberBinding="{Binding LastVolunteerName}" Width="150"/>
                                <GridViewColumn Header="# Assignments" DisplayMemberBinding="{Binding TotalAssignments}" Width="100"/>
                                <GridViewColumn Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Delete"
                                                Background="#C25C9E"
                                                Style="{StaticResource RoundedButtonStyle}"
                                                Click="DeleteCall_Click"
                                                Visibility="{Binding Path=CanDelete}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Cancel Assignment"
                                                    Background="#F9B350"
                                                    Style="{StaticResource RoundedButtonStyle}"
                                                    Click="CancelAssignment_Click"
                                                    Visibility="{Binding Path=CanCancelAssignment}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView> 
                        </ListView.View>
                    </ListView>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                        <Button Content="Refresh" Click="BtnRefresh_Click" Background="#B9D15F" Width="100" Style="{StaticResource RoundedButtonStyle}"/>
                        <Button Content="Close" Click="BtnClose_Click" Background="#F9B350" Width="100" Style="{StaticResource RoundedButtonStyle}"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Window>
