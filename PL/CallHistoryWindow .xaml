<Window x:Class="PL.CallHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Call History" Height="550" Width="900"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="10">
        <TextBlock Text="Volunteer Call History"
                   FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 0 10">
            <TextBlock Text="Filter by status:" VerticalAlignment="Center" Margin="0 0 5 0"/>
            <ComboBox Width="150"
                      ItemsSource="{Binding StatusOptions}"
                      SelectedItem="{Binding SelectedStatusFilter}"
                      Margin="0 0 10 0"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding FilteredCalls}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Height="370"
                  Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Call ID" Binding="{Binding CallId}" Width="*" />
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="2*" />
                <DataGridTextColumn Header="Open Time" Binding="{Binding OpenTime}" Width="*" />
                <DataGridTextColumn Header="End Time" Binding="{Binding EndTreatmentTime}" Width="*" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />
                <DataGridTextColumn Header="Status" Binding="{Binding CompletionType}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Text="{Binding Statistics}" FontWeight="Bold" FontSize="14" Margin="10"/>
    </StackPanel>
</Window>
