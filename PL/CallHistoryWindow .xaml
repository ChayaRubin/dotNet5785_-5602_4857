<Window x:Class="PL.CallHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Call History"
        Height="550"
        Width="900"
        Background="#E6F0FA"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="ColoredComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#C25C9E"/>
            <Setter Property="BorderBrush" Value="#C25C9E"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="DataGridCellTextStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Border Background="White" CornerRadius="12" Padding="20" BorderBrush="#0F425F" BorderThickness="2">
            <DockPanel LastChildFill="True">

                <!-- Header -->
                <TextBlock Text="Volunteer Call History"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#0F425F"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 15"
                           DockPanel.Dock="Top"/>

                <!-- Filter -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 0 0 10" DockPanel.Dock="Top">
                    <TextBlock Text="Filter by status:"
                               VerticalAlignment="Center"
                               Margin="0 10 10 0"
                               Foreground="#C25C9E"
                               FontWeight="Bold"/>
                    <ComboBox Width="150"
                              ItemsSource="{Binding StatusOptions}"
                              SelectedItem="{Binding SelectedStatusFilter}"
                              Style="{StaticResource ColoredComboBox}"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid ItemsSource="{Binding FilteredCalls}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="0 0 0 10"
                          GridLinesVisibility="None"
                          RowBackground="#F8F8F8"
                          AlternatingRowBackground="#EDF4FC"
                          BorderBrush="#B0C4DE"
                          BorderThickness="1"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Call ID" Binding="{Binding Id}" Width="*" MinWidth="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridCellTextStyle}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridCellTextStyle}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Open Time" Binding="{Binding OpenTime}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridCellTextStyle}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="End Time" Binding="{Binding EndTreatmentTime}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridCellTextStyle}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Type column with colored background -->
                        <DataGridTemplateColumn Header="Type" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Padding="4" CornerRadius="4">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="White"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="Urgent">
                                                        <Setter Property="Background" Value="#FFCDD2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="Medium_Urgency">
                                                        <Setter Property="Background" Value="#FFF9C4"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="General_Assistance">
                                                        <Setter Property="Background" Value="#C8E6C9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="Non_Urgent">
                                                        <Setter Property="Background" Value="#BBDEFB"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="None">
                                                        <Setter Property="Background" Value="#E0E0E0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Type}" 
                                                   Style="{StaticResource DataGridCellTextStyle}" 
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Status" Binding="{Binding CompletionType}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridCellTextStyle}"/>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Statistics -->
                <TextBlock Text="{Binding Statistics}"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="#0F425F"
                           Margin="5 0 0 0"
                           DockPanel.Dock="Bottom"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>

