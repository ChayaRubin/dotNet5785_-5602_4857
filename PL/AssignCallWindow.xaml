<Window x:Class="PL.AssignCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign a Call" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Available Calls Nearby"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0 0 0 10"/>

        <!-- DataGrid of Available Calls -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding AvailableCalls}"
                  SelectedItem="{Binding SelectedCall, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0 10 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Call ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Type" Binding="{Binding CallType}" Width="*"/>
                <DataGridTextColumn Header="Address" Binding="{Binding FullAddress}" Width="2*"/>
                <DataGridTextColumn Header="Distance (km)" Binding="{Binding DistanceFromVolunteer}" Width="Auto"/>
                <DataGridTemplateColumn Header="Action" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Assign"
                                    Command="{Binding DataContext.AssignCallCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding .}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Details and Map -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0 10 0 0">
            <TextBlock Text="Call Description:" FontWeight="Bold" Margin="0 5 0 0"/>
            <TextBlock Text="{Binding SelectedCall.Description}" TextWrapping="Wrap" Height="60"/>

            <TextBlock Text="Map Preview:" FontWeight="Bold" Margin="0 10 0 5"/>
            <TextBlock HorizontalAlignment="Left">
                <Hyperlink NavigateUri="{Binding MapLink}" RequestNavigate="Hyperlink_RequestNavigate">
                    Open in Google Maps
                </Hyperlink>
            </TextBlock>

            <Button Content="Close"
                    Width="100"
                    HorizontalAlignment="Right"
                    Margin="0 10 0 0"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
