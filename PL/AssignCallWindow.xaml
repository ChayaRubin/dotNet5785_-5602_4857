<Window x:Class="PL.AssignCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign a Call"
        Height="700"
        Width="900"
        Background="#E6F0FA"
        WindowStartupLocation="CenterScreen"
        xmlns:navigation="clr-namespace:System.Windows.Navigation;assembly=PresentationFramework">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="6 2"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Available Calls Nearby"
                   FontSize="24" FontWeight="Bold"
                   Foreground="#0F425F" HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <!-- Filters -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 10 0 10" HorizontalAlignment="Center">
            <TextBlock Text="Filter by Type:" VerticalAlignment="Center" Margin="0 0 5 0"/>
            <ComboBox Width="140"
                      ItemsSource="{Binding CallTypes}"
                      SelectedItem="{Binding SelectedCallTypeFilter}" Margin="0 0 20 0"/>
            <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0 0 5 0"/>
            <ComboBox Width="140"
                      ItemsSource="{Binding SortOptions}"
                      SelectedItem="{Binding SelectedSortOption}" />
        </StackPanel>

        <!-- Address Update -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 0 0 10" HorizontalAlignment="Center">
            <TextBlock Text="Update Address:" VerticalAlignment="Center" Margin="0 0 10 0"/>
            <TextBox Width="300" Text="{Binding VolunteerAddress, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Save" Width="80" Margin="10 0 0 0"
                    Command="{Binding UpdateAddressCommand}" 
                    Height="30"
                    Background="#B9D15F" Style="{StaticResource RoundedButtonStyle}"/>
        </StackPanel>

        <!-- Calls List -->
        <ListBox Grid.Row="3" ItemsSource="{Binding AvailableCalls}" SelectedItem="{Binding SelectedCall, Mode=TwoWay}"
                 Background="Transparent" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto"
                 HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="8" Padding="8" Margin="0 4" BorderThickness="1" Background="White" BorderBrush="#D0DCE7">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="210"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Call ID -->
                            <TextBlock Text="{Binding Id}" Grid.Column="0" VerticalAlignment="Center" Margin="10,0"/>

                            <!-- Call Type with background color -->
                            <Border Grid.Column="1" CornerRadius="4" Padding="4" Margin="5 0" VerticalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CallType}" Value="Urgent">
                                                <Setter Property="Background" Value="#FFCDD2"/>
                                                <!-- אדום בהיר -->
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CallType}" Value="Medium_Urgency">
                                                <Setter Property="Background" Value="#FFF9C4"/>
                                                <!-- צהוב בהיר -->
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CallType}" Value="General_Assistance">
                                                <Setter Property="Background" Value="#C8E6C9"/>
                                                <!-- ירוק בהיר -->
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CallType}" Value="Non_Urgent">
                                                <Setter Property="Background" Value="#BBDEFB"/>
                                                <!-- כחול בהיר -->
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CallType}" Value="None">
                                                <Setter Property="Background" Value="#E0E0E0"/>
                                                <!-- אפור בהיר -->
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding CallType}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <!-- Full Address -->
                            <TextBlock Text="{Binding FullAddress}" Grid.Column="2" Margin="30,0" VerticalAlignment="Center" TextWrapping="Wrap"/>

                            <!-- Distance -->
                            <TextBlock Text="{Binding DistanceFromVolunteer}" Grid.Column="3" VerticalAlignment="Center"/>

                            <!-- Assign Button -->
                            <Button Content="Assign" Grid.Column="4" Margin="120,0" Style="{StaticResource RoundedButtonStyle}"
                                    Background="#6FA8DC"
                                    Height="30"
                                    Command="{Binding DataContext.AssignCallCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding .}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Description + Map -->
        <StackPanel Grid.Row="4" Margin="0 20 0 0">
            <TextBlock Text="Call Description:" FontWeight="Bold" Foreground="#0F425F" Margin="0 5"/>
            <TextBlock Text="{Binding SelectedCall.Description}" TextWrapping="Wrap" Height="60" Margin="0 0 0 10"/>
            <TextBlock Text="Map Preview:" FontWeight="Bold" Foreground="#0F425F"/>
            <TextBlock HorizontalAlignment="Left" Margin="0 0 0 10">
                <Hyperlink NavigateUri="{Binding MapLink}" RequestNavigate="Hyperlink_RequestNavigate">
                    Open in Google Maps
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="5" Content="Close" Width="100" Height="35"
                HorizontalAlignment="Center" Background="#F9B350"
                Click="Close_Click" Style="{StaticResource RoundedButtonStyle}" Margin="0 10 0 0"/>
    </Grid>
</Window>

