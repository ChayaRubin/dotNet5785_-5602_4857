<Window x:Class="PL.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Volunteer Details" Height="600" Width="450"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Closing="VolunteerPage_Closing">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock />
        <TextBlock Text="Volunteer Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Id:" Width="120"/>
                    <TextBox Text="0" Width="250" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Full Name:" Width="120"/>
                    <TextBox Text="" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Phone Number:" Width="120"/>
                    <TextBox Text="{Binding CurrentVolunteer.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Email:" Width="120"/>
                    <TextBox Text="{Binding CurrentVolunteer.Email, UpdateSourceTrigger=PropertyChanged}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Current Address:" Width="120"/>
                    <TextBox Text="{Binding CurrentVolunteer.CurrentAddress, UpdateSourceTrigger=PropertyChanged}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Latitude:" Width="120"/>
                    <TextBlock Text="{Binding CurrentVolunteer.Latitude}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Longitude:" Width="120"/>
                    <TextBlock Text="{Binding CurrentVolunteer.Longitude}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5" VerticalAlignment="Center">
                    <TextBlock Text="Role:" Width="120"/>
                    <ComboBox Width="150" SelectedValue="{Binding CurrentVolunteer.Role, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding Roles}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5" VerticalAlignment="Center">
                    <TextBlock Text="Is Active:" Width="120"/>
                    <CheckBox IsChecked="{Binding CurrentVolunteer.IsActive, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Max Distance:" Width="120"/>
                    <TextBox Text="{Binding CurrentVolunteer.MaxDistance, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5" VerticalAlignment="Center">
                    <TextBlock Text="Distance Type:" Width="120"/>
                    <ComboBox Width="150" SelectedValue="{Binding CurrentVolunteer.TypeOfDistance, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding DistanceTypes}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,5">
                    <TextBlock Text="Total Calls Handled:" Width="120"/>
                    <TextBlock Text="{Binding CurrentVolunteer.TotalCallsHandled}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Total Calls Canceled:" Width="120"/>
                    <TextBlock Text="{Binding CurrentVolunteer.TotalCallsCanceled}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Total Calls Expired:" Width="120"/>
                    <TextBlock Text="{Binding CurrentVolunteer.TotalExpiredCalls}" />
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" >
            <Button Content="{Binding ButtonText}" Width="120" Height="30" Margin="0,0,10,0"
                    Click="ButtonAddUpdate_Click"/>
            <Button Content="Close" Width="80" Height="30" Click="ButtonClose_Click"/>
        </StackPanel>
    </Grid>
</Window>