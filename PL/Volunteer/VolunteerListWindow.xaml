<Window
    x:Class="PL.Volunteer.VolunteersListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:BO="clr-namespace:BO;assembly=BL"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    Title="Volunteer List"
    Height="500"
    Width="850"
    Background="#E6F0FA"
    WindowStartupLocation="CenterScreen"
    Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="ColoredComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#C25C9E"/>
            <Setter Property="BorderBrush" Value="#C25C9E"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid>
            <Border Background="White" CornerRadius="12" Padding="20" BorderBrush="#0F425F" BorderThickness="2" Margin="40">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <!-- Filter Section -->
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 20" HorizontalAlignment="Left">
                        <TextBlock Text="Filter by Call Type:" VerticalAlignment="Center" Margin="0 10 10 0"
                                   Foreground="#C25C9E" FontWeight="Bold"/>
                        <ComboBox
                            Name="FilterByComboBox"
                            ItemsSource="{Binding CallTypes}"
                            SelectedItem="{Binding SelectedCallType, Mode=TwoWay}"
                            Width="200"
                            Style="{StaticResource ColoredComboBox}" />
                    </StackPanel>

                    <!-- Volunteer List -->
                    <ListView 
                        ItemsSource="{Binding VolunteersListView}" 
                        SelectedItem="{Binding SelectedVolunteer, Mode=TwoWay}"
                        BorderBrush="#B0C4DE" 
                        BorderThickness="1" 
                        Height="300"
                        MouseDoubleClick="VolunteersListView_MouseDoubleClick">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="100"/>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding FullName}" Width="200"/>
                                <GridViewColumn Header="Is Active" DisplayMemberBinding="{Binding IsActive}" Width="100"/>
                                <GridViewColumn Header="Handled" DisplayMemberBinding="{Binding TotalHandledCalls}" Width="100"/>
                                <GridViewColumn Header="Canceled" DisplayMemberBinding="{Binding TotalCanceledCalls}" Width="100"/>
                                <GridViewColumn Header="Expired" DisplayMemberBinding="{Binding TotalExpiredCalls}" Width="100"/>
                                <GridViewColumn Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Delete"
                                                    Background="#C25C9E"
                                                    Foreground="White"
                                                    FontWeight="Bold"
                                                    BorderBrush="#C25C9E"
                                                    Padding="5"
                                                    Style="{StaticResource RoundedButtonStyle}"
                                                    Click="DeleteVolunteer_Click"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                        <Button Content="Add A Volunteer" Click="BtnAdd_Click" Background="#6FA8DC" Width="150" Height="35" FontSize="14" Style="{StaticResource RoundedButtonStyle}"/>
                        <Button Content="Refresh" Click="BtnRefresh_Click" Background="#B9D15F" Width="80" Height="35" FontSize="14" Style="{StaticResource RoundedButtonStyle}"/>
                        <Button Content="Close" Click="BtnClose_Click" Background="#F9B350" Width="80" Height="35" FontSize="14" Style="{StaticResource RoundedButtonStyle}"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Window>

