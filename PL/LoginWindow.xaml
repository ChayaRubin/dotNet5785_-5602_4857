<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:PL"
        Title="Login - Volunteer System"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        SizeToContent="Manual"
        MinWidth="400"
        MinHeight="400"
        Width="500"
        Height="500"
        Background="#E6F0FA"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A34D89"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox" x:Key="ValidationTextBoxStyle">
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="Background" Value="#F8D7DA"/>
                    <Setter Property="ToolTip" Value="This field is required"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Border Background="White" CornerRadius="16" Padding="30" BorderBrush="#0F425F" BorderThickness="2" Margin="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0 0 0 20">
                    <TextBlock Text="🔐" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Login to the System"
                               FontSize="26" FontWeight="Bold" Foreground="#0F425F"
                               HorizontalAlignment="Center" Margin="0 5"/>
                    <TextBlock Text="Please enter your login details"
                               FontSize="14" Foreground="#888" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Form -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" Width="300">
                    <TextBlock Text="ID Number" Margin="0 5 0 2" Foreground="#0F425F"/>
                    <TextBox Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ValidationTextBoxStyle}"
                             Height="32" />

                    <TextBlock Text="Password" Margin="10 5 0 2" Foreground="#0F425F"/>
                    <PasswordBox Height="32"
                                 helpers:PasswordBoxHelper.BindPassword="True"
                                 helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <Button Content="Login"
                            Command="{Binding LoginCommand}"
                            Background="#C25C9E"
                            Style="{StaticResource RoundedButtonStyle}"
                            IsDefault="True"
                            Margin="0 20 0 0"/>

                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="Red"
                               TextAlignment="Center"
                               Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Margin="10"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
